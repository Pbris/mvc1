{% extends 'base.html.twig' %}

{% block title %}All Books{% endblock %}

{% block body %}
    <h1>All Books</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                <td><a href="{{ path('book_by_id', {id: book.id}) }}">{{ book.title }}</a></td>
                <td><img src="{{ asset(book.image) }}" alt="Book Image"></td>
                <td>{{ book.author }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
