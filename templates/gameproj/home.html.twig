{% extends "proj.html.twig" %}

{% block title %}Blackjack - Home{% endblock %}

{% block body %}
<h1>Welcome to Blackjack, {{ playerName }}</h1>
<p>Current Bank Balance: ${{ playerBank|number_format(2, '.', ',') }}</p>
<form action="{{ path('start_game_proj') }}" method="post">
    <label for="hands">Number of hands (1-3):</label>
    <select name="hands" id="hands">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
    </select>
    <br><br>
    <label for="bet">Total bet (Total bet will be divided evenly among hands)</label>
    <input type="number" name="bet" id="bet" min="1" max="{{ playerBank }}" required>
    <br><br>
    <label for="include_computer">Include computer player:</label>
    <input type="checkbox" name="include_computer" id="include_computer">
    <br><br>
    <label for="computer_strategy">Computer strategy:</label>
    <select name="computer_strategy" id="computer_strategy">
        <option value="dumb">Dumb (like dealer)</option>
        <option value="smart">Smart (hit on soft 17)</option>
    </select>
    <br><br>
    <button type="submit">Start Game</button>
</form>
{% endblock %}