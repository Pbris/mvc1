<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }}); background-size: cover;">
            <h2>My Symfony Site</h2>
        </header>

        <nav class="navbar">
            <ul>
                <li><a href="{{ path('presentation') }}">Presentation</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                <li><a href="{{ path('api_landing') }}">Api landing page</a></li>
                <li><a href="{{ path('session') }}">Session page</a></li>
                <li><a href="{{ path('card_start') }}">Card game</a></li>
            </ul>
        </nav>

        <main>
        {% block body %}{% endblock %}
        </main>

        <footer>
        <p>
            Footer text for design purposes.
        </p>
        </footer>
    </body>
</html>
