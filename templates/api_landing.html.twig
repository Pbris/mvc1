{% extends "base.html.twig" %}

{% block title %}API landing page{% endblock %}

{% block body %}
    <h1>JSON routes</h1>
        <ul>
        {% for route in jsonRoutes %}
            <li>
                <strong>Route:</strong> {{ route.path }}<br>
                <strong>Description:</strong> {{ route.description }}
                {% if route.url is defined %}
                <a href="{{ route.url }}">/library/book/9789171370181</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>

{% endblock %}